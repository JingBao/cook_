<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_author_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jingdroid.cook.view.activity.AuthorInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_headimg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:riv_border_color="#333333"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/tv_headname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_headimg"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/tv_headsign"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_headname" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_headname"
                android:layout_marginTop="15dp">

                <Button
                    android:id="@+id/btn_subscribe"
                    android:layout_width="70dp"
                    android:layout_height="23dp"
                    android:background="@drawable/shape_author_subscribe"
                    android:gravity="center"
                    android:text="订阅"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_subscribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_subscribe"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="1145订阅者" />
            </RelativeLayout>

        </RelativeLayout>

        <ListView
            android:id="@+id/list_author_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:dividerHeight="10dp">
        </ListView>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_groupend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ฅ厨娘工艺ฅ " />

        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/tv_groupend"
            android:background="@color/colorBlack" />

        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/tv_groupend"
            android:background="@color/colorBlack" />
    </RelativeLayout>
</LinearLayout>
